@model DigiRose.Models.Users.ForgetPasswordViewModel
<link rel="stylesheet" href="~/css/AuthForm.css">
<title>@ViewData["Title"]پبدا کردن کاربر</title>
<link rel="stylesheet" href="~/css/Account.css">
@{
    Layout = "AuthTemplate";
}
@{
    if (Model != null && !String.IsNullOrEmpty(Model.Message) && !Model.IsCompleted)
    {
        <div class="alert alert-danger hide">@Model.Message</div>
    }
}
<script>
  setTimeout(function() {
     $(".hide").fadeOut();
  },1000)
</script>
<body class="bodycolor">
<card>
    
    <div class="card card-header bodycolor">
        <h1 class="titleStyle"> DigiRose</h1>
    </div>
    <div class="card card-body">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="ForgetPassword" asp-controller="User" method="post">
                    <div class="form-group">
                        <input asp-for="Phonenumber" class="form-control inputStyle" placeholder="شماره همراه.... ">
                        <span asp-validation-for="Phonenumber" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="card vr-cardboard btncardStyle">
                        <button class="btn btn-primary btncardStyle" type="submit" dir="rtl">ارسال</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</card>
</body>